@model PingPong.Models.Team

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="dl-horizontal">
      <dt>
        @Html.DisplayNameFor(model => model.TeamName)
      </dt>

      <dd>
        @Html.DisplayFor(model => model.TeamName)
      </dd>

      <dt>
        @Html.DisplayNameFor(model => model.League)
      </dt>

      <dd>
        @Html.DisplayFor(model => model.League)
      </dd>

      <!--ADDED TO SHOW THE PLAYERS NAMES-->

      <dt>
        @Html.DisplayNameFor(model => model.Players)
      </dt>
      <dd>
        <table class="table">
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
          </tr>
          @foreach (var item in Model.Players)
          {
            <tr>
              <td>
                @Html.DisplayFor(modelItem => item.FirstName)
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.LastName)
              </td>
            </tr>
          }
        </table>
      </dd>

      <!--ADDED TO SHOW THE PLAYERS NAMES-->

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.TeamID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
